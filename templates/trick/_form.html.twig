{{ form_start(form) }}
    {{ form_row(form.category) }}
    {{ form_row(form.name) }}
    {{ form_row(form.description) }}
    {{ form_row(form.images) }}

    <div class="mb-3">
      <label class="form-label" for="trick_videos">Vid√©os</label>
      <a class="add_item_link btn btn-success m-3 float-end" data-collection-holder-class="videos"><i class="fa-solid fa-plus"></i></a>
      <ul class="videos list-group"
      data-index="{{ form.videos|length > 0 ? form.videos|last.vars.name + 1 : 0 }}"
      data-prototype="{{ form_widget(form.videos.vars.prototype)|e('html_attr') }}">
      </ul>
    </div>
      
    <div class="d-grid gap-2 mt-5">
        <button class="btn btn-info">{{ button_label|default('Save') }}</button>
    </div>
    {{ form_row(form._token) }}

{{ form_end(form, { render_rest: false }) }}

{% block body_js %}
  <script>
    const addTagFormDeleteLink = (item) => {
      const removeFormButton = document.createElement('a');
      removeFormButton.classList.add('btn', 'btn-danger')
      removeFormButton.innerHTML = '<i class="fa-solid fa-trash"></i>';

      item.append(removeFormButton);

      removeFormButton.addEventListener('click', (e) => {
          e.preventDefault();
          // remove the li for the tag form
          item.remove();
      });
    }
    const addFormToCollection = (e) => {
      const collectionHolder = document.querySelector('.' + e.currentTarget.dataset.collectionHolderClass);
    
      const item = document.createElement('li');
      item.classList.add('list-group-item')
    
      item.innerHTML = collectionHolder
        .dataset
        .prototype
        .replace(
          /__name__/g,
          collectionHolder.dataset.index
        );
    
      addTagFormDeleteLink(item);
      collectionHolder.appendChild(item);
    
      collectionHolder.dataset.index++;
    };
    
    document
    .querySelectorAll('.add_item_link')
    .forEach(btn => {
      btn.addEventListener("click", addFormToCollection)
    });
    document
    .querySelectorAll('ul.tags li')
    .forEach((tag) => {
        addTagFormDeleteLink(tag)
    })
  </script>
{% endblock %}