{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe | SnowTricks{% endblock %}


{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="container mt-5 border border-3 p-5">
        <h1 class="text-center">Réinitialiser son mot de passe</h1>
        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div>
                <small>
                    Veuillez entrer votre adresse mail, nous vous enverrons un email
                </small>
            </div>

            <div class="d-grid gap-2 mt-4">
                <button class="btn btn-primary">Envoyer moi un mail de réinitialisation !</button>
            </div>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
{% block footer %}
    
{% endblock %}