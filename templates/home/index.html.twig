{% extends 'base.html.twig' %}

{% block title %}Acceuil | SnowTricks{% endblock %}

{% block body %}
<section class="bg-hoverboard py-5 mx-0 text-center container d-flex align-items-center">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="text-light">Album example</h1>
            <p class="lead text-light">
                Something short and leading about the collection below—its
                contents, the creator, etc. Make it short and sweet, but not too
                short so folks don't simply skip over it entirely.
            </p>
            <p>
                <a href="#" class="btn btn-primary my-2">Main call to action</a>
                <a href="#" class="btn btn-secondary my-2">Secondary action</a>
            </p>
        </div>
    </div>
</section>
<main>
    <div class="album py-5 bg-light" id="tricks">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5 g-5">
                {% for trick in tricks %}
                <div class="col">
                    <div class="card shadow-sm">
                        {% set image =  trick.images|first %}
                        {% if image != false and image_exists(asset(image.name)) %}
                            <img src="{{ asset('/uploads/images/'~ image.name) }}" alt="">
                        {% else %}
                            <img src="{{ asset('/uploads/images/default.jpg') }}" alt="">
                        {% endif %}
                        <div class="card-body">
                            <p class="card-text">
                                {{ trick.name|capitalize }}
                            </p>
                            <div class="d-flex justify-content-between">
                                <div class="btn-group">
                                    <a href="{{ path('app_trick_show', {'id': trick.id}) }}" class="btn btn-sm btn-outline-success">
                                        Voir
                                    </a>
                                    {% if app.user == trick.author %}
                                        <a href="{{ path('app_trick_edit', {'id': trick.id}) }}" class="btn btn-sm btn-outline-secondary">
                                            Modifier
                                        </a>
                                        <a href="{{ path('app_trick_delete', {'id': trick.id}) }}" class="btn btn-sm btn-outline-danger">
                                            Supprimer
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                            <small class="text-muted">
                                Créer le : <br> {{ trick.createdAt|date("d/m/Y") }} <br>
                                {% if trick.createdAt != trick.updatedAt %}
                                    Dernière modification :  <br> {{ trick.updatedAt|date("d/m/Y H:i:s") }}
                                {% endif %}
                            </small>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% if totalPages > 1 %}
                <nav class="my-4" aria-label="Page navigation">
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link" href="{{ path('app_home', {'page': 1}) }}">First</a></li>
                        <li class="page-item"><a class="page-link" href="{{ path('app_home', {'page': page - 1}) }}">Previous</a></li>
                        {% for i in 1..totalPages %}
                            {% set active = false %}
                            {% if i == page %}
                                {% set active = 'active' %}
                            {% endif %}
                            <li class="page-item {{ active }}"><a class="page-link" href="{{ path('app_home', {'page': i}) }}">{{ i }}</a></li>
                        {% endfor %}
                        <li class="page-item"><a class="page-link" href="{{ path('app_home', {'page': page + 1}) }}">Next</a></li>
                        <li class="page-item"><a class="page-link" href="{{ path('app_home', {'page': totalPages}) }}">Last</a></li>
                    </ul>
                </nav>
            {% endif %}
        </div>
    </div>
</main>
{% endblock %}
